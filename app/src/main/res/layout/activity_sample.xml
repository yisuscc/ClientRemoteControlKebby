<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_01_50"
    android:keepScreenOn="true">



<EditText
    android:id="@+id/ipText"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:hint="Introduce IP Adress"
    android:inputType="text"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/img_frame"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/setIp"

    />
    <Button
        android:id="@+id/setIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_frame"
        app:layout_constraintLeft_toRightOf="@id/ipText"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Set"

        />
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_frame"
        app:layout_constraintLeft_toRightOf="@id/setIp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Connect"

        />

    <ImageView
        android:id="@+id/img_frame"
        android:layout_width="640dp"
        android:layout_height="480dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription"/>



    <com.codertainment.dpadview.DPadView

    android:id="@+id/dpad"
    android:layout_width="128dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_height="128dp"
    android:src="@drawable/ic_gamepad_black" />


</androidx.constraintlayout.widget.ConstraintLayout>